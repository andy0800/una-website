# UNA Institute Production Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=4000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/una_website?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# CORS Configuration - Add your production domains
ALLOWED_ORIGINS=https://una.institute,https://www.una.institute,https://api.una.institute

# Admin Configuration
ADMIN_EMAIL=admin@una.institute
ADMIN_PASSWORD=your-secure-admin-password

# Email Configuration (if using email features)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@una.institute
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Domain Configuration
FRONTEND_DOMAIN=https://una.institute
API_DOMAIN=https://api.una.institute
