{
  "version": 2,
  "rewrites": [
    { "source": "/ar/:path*", "destination": "/ar/:path*/index.html" },
    { "source": "/en/:path*", "destination": "/en/:path*/index.html" },
    { "source": "/admin/:path*", "destination": "/admin/:path*/index.html" },
    { "source": "/", "destination": "/ar/index.html" }
  ]
}