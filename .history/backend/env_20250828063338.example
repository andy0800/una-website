# ðŸš€ PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/una_institute
MONGODB_URI_PROD=mongodb://your-production-db:27017/una_institute

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=24h

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVERS=your-turn-server-url:3478
WEBRTC_TURN_USERNAME=your-turn-username
WEBRTC_TURN_PASSWORD=your-turn-password

# Redis Configuration (for production load balancing)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Security Configuration
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=uploads/

# SSL Configuration (for production)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090

# Clustering Configuration
ENABLE_CLUSTERING=true
MAX_WORKERS=4
