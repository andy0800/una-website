{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/ar/index.html"
    },
    {
      "src": "/ar",
      "dest": "/frontend/ar/index.html"
    },
    {
      "src": "/en",
      "dest": "/frontend/en/index.html"
    },
    {
      "src": "/admin",
      "dest": "/frontend/admin/login.html"
    },
    {
      "src": "/admin/dashboard",
      "dest": "/frontend/admin/dashboard.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/frontend/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/frontend/images/$1"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/frontend/socket.io/$1"
    },
    {
      "src": "/ar/(.*)",
      "dest": "/frontend/ar/$1"
    },
    {
      "src": "/en/(.*)",
      "dest": "/frontend/en/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/frontend/admin/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
